    <servlet>
        <servlet-name>viewProfile</servlet-name>
        <servlet-class>in.web.application1.ViewProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>viewProfile</servlet-name>
        <url-pattern>/viewProfile</url-pattern>
    </servlet-mapping>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>profile</web-resource-name>
            <url-pattern>/viewProfile</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <!--<role-name>VISITOR</role-name>-->
            <role-name>ADMIN</role-name>
            <!--<role-name>visitor</role-name>-->
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>ADMIN</role-name>
    </security-role>
    <!--<security-role>
